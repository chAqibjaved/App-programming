<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="5dp"
    app:contentPadding="7dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/hotel_list_item_photo_img"
            android:layout_width="fill_parent"
            android:layout_height="136.0dip"
            android:foreground="@color/image_curtain"
            android:scaleType="centerCrop" />
        <TextView
            android:textColor="@color/white"
            android:layout_gravity="center|left|top"
            android:id="@+id/hotel_list_item_hotelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Name"
            android:textSize="14.0sp"
            android:textStyle="bold"
            android:shadowColor="@color/black_1_100a"
            android:shadowDx="-2"
            android:shadowDy="2"
            android:shadowRadius="0.01"
            android:layout_marginLeft="@dimen/_8dp" />
        <ImageView
            android:layout_gravity="bottom|center|left"
            android:id="@+id/hotel_list_item_specialdeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:srcCompat="@drawable/last_minute_deal_badge_pink" />

    </FrameLayout>


        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/text_normal"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/hotel_list_item_strike_through_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="US$141"
                android:maxLines="2"
                android:layout_weight="0.1"
                />
            <TextView
                android:textSize="15.0sp"
                android:id="@+id/hotel_list_item_hotel_price_txt"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="US$141"
                android:textColor="@color/palette_blue2"
                android:maxLines="2"
                android:visibility="invisible"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:id="@+id/hotel_list_item_hotel_location"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:text="Lahore"
                android:textColor="@color/text_normal"
                android:maxLines="2"
                android:gravity="end"
                android:layout_marginRight="6dp"
                android:layout_weight="1.0" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/text_secondary"
                android:gravity="center_vertical"
                android:id="@+id/hotel_list_item_roomcount"
                android:layout_width="wrap_content"
                android:text="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Room  x  " />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/text_secondary"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:id="@+id/hotel_list_item_nightcount"
                android:text="1"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12.0sp"
                android:textColor="@color/text_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Night " />


            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0dip"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="10.0sp"
                android:textStyle="bold"
                android:textColor="@color/palette_blue2"
                android:ellipsize="end"
                android:id="@+id/hotel_list_item_discount_txt"
                android:layout_width="wrap_content"
                android:text="Discount"
                android:layout_marginRight="2dp"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hotel_list_item_discount_val"
                android:visibility="invisible"
                android:textSize="10.0sp"
                android:textColor="@color/text_normal"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="3dp"
                android:text="50%"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>